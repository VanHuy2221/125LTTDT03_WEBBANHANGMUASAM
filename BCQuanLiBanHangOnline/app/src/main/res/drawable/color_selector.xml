<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#000000"/>
            <stroke
                android:width="3dp"
                android:color="#6A5ACD"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#000000"/>
            <stroke
                android:width="1dp"
                android:color="#DDDDDD"/>
        </shape>
    </item>
</selector>
