<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFF3E0">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header: Exchange ID + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtExchangeId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TD#001"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E65100"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ duyệt"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Product Wanted -->
        <TextView
            android:id="@+id/txtProductWant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muốn: iPhone 14 Pro Max"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <!-- Product Offered -->
        <TextView
            android:id="@+id/txtProductOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi: MacBook Pro M2"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <!-- Message (rút gọn) -->
        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi muốn trao đổi sản phẩm này..."
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- NÚT XEM CHI TIẾT -->
        <Button
            android:id="@+id/btnViewDetail"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="XEM CHI TIẾT"
            android:textColor="#1976D2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/button_outline_primary"
            android:layout_marginBottom="12dp"/>

        <!-- Buttons hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Nhắn tin"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp"/>

            <Button
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Từ chối"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#E53935"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp"/>

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Chấp nhận"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:paddingHorizontal="12dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>