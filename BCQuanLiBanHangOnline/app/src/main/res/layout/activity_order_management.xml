<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#FFFFFF" android:orientation="vertical">
    <!--  Header với nút back  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="#FFFFFF" android:paddingStart="20dp" android:paddingEnd="20dp" android:paddingTop="20dp" android:paddingBottom="20dp" android:gravity="center_vertical">
        <!--  Nút back  -->
        <ImageView android:id="@+id/btnBack" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_back" android:layout_marginEnd="16dp" android:clickable="true" android:focusable="true"/>
        <!--  Tiêu đề  -->
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Quản lý đơn hàng" android:textColor="#1A1A1A" android:textSize="24sp" android:textStyle="bold"/>
    </LinearLayout>
    <!--  Search Bar  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="#F5F5F5" android:padding="16dp" android:layout_marginBottom="8dp">
        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_search" android:layout_gravity="center_vertical" android:layout_marginEnd="12dp"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Tìm kiếm đơn hàng..." android:background="@null" android:textColor="#666666" android:textColorHint="#999999" android:padding="8dp"/>
    </LinearLayout>
    <!--  Order List  -->
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <!--  Order #DH001 - Chờ duyệt  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="8dp" app:cardElevation="2dp" app:cardUseCompatPadding="true">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                    <!--  Header with Status  -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="#DH001" android:textColor="#1A1A1A" android:textSize="16sp" android:textStyle="bold"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chờ duyệt" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold" android:background="@drawable/status_pending_background" android:paddingHorizontal="8dp" android:paddingVertical="4dp"/>
                    </LinearLayout>
                    <!--  Customer & Date  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nguyễn Văn A • 02/10/2025" android:textColor="#666666" android:textSize="14sp" android:layout_marginBottom="12dp"/>
                    <!--  Product Info  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="iPhone 14 Pro Max 128GB" android:textColor="#1A1A1A" android:textSize="16sp" android:textStyle="bold" android:layout_marginBottom="4dp"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số lượng: 1" android:textColor="#666666" android:textSize="14sp" android:layout_marginBottom="8dp"/>
                    <!--  Price  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="25.990.000đ" android:textColor="#FF6B35" android:textSize="18sp" android:textStyle="bold" android:layout_marginBottom="12dp"/>
                    <!--  Action Buttons - Từ chối/Duyệt  -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end">
                        <Button android:layout_width="wrap_content" android:layout_height="32dp" android:text="Từ chối" android:textColor="#FF6B35" android:textSize="12sp" android:background="@drawable/button_outline_background" android:layout_marginEnd="8dp" android:paddingHorizontal="16dp"/>
                        <Button android:layout_width="wrap_content" android:layout_height="32dp" android:text="Duyệt" android:textColor="#FFFFFF" android:textSize="12sp" android:background="@drawable/button_primary_background" android:paddingHorizontal="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  Order #DH002 - Đã duyệt  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="8dp" app:cardElevation="2dp" app:cardUseCompatPadding="true">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                    <!--  Header with Status  -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="#DH002" android:textColor="#1A1A1A" android:textSize="16sp" android:textStyle="bold"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đã duyệt" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold" android:background="@drawable/status_approved_background" android:paddingHorizontal="8dp" android:paddingVertical="4dp"/>
                    </LinearLayout>
                    <!--  Customer & Date  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Trần Thị B • 01/10/2025" android:textColor="#666666" android:textSize="14sp" android:layout_marginBottom="12dp"/>
                    <!--  Product Info  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Samsung Galaxy S23 Ultra 256GB" android:textColor="#1A1A1A" android:textSize="16sp" android:textStyle="bold" android:layout_marginBottom="4dp"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số lượng: 1" android:textColor="#666666" android:textSize="14sp" android:layout_marginBottom="8dp"/>
                    <!--  Price  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="22.990.000đ" android:textColor="#FF6B35" android:textSize="18sp" android:textStyle="bold" android:layout_marginBottom="12dp"/>
                    <!--  Action Buttons - Cập nhật trạng thái  -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end">
                        <Button android:layout_width="wrap_content" android:layout_height="32dp" android:text="Cập nhật trạng thái" android:textColor="#FFFFFF" android:textSize="12sp" android:background="@drawable/button_primary_background" android:paddingHorizontal="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  Order #DH003 - Đã giao  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="8dp" app:cardElevation="2dp" app:cardUseCompatPadding="true">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                    <!--  Header with Status  -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="#DH003" android:textColor="#1A1A1A" android:textSize="16sp" android:textStyle="bold"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đã giao" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold" android:background="@drawable/status_delivered_background" android:paddingHorizontal="8dp" android:paddingVertical="4dp"/>
                    </LinearLayout>
                    <!--  Customer & Date  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lê Văn C • 30/09/2025" android:textColor="#666666" android:textSize="14sp" android:layout_marginBottom="12dp"/>
                    <!--  Product Info  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="AirPods Pro 2" android:textColor="#1A1A1A" android:textSize="16sp" android:textStyle="bold" android:layout_marginBottom="4dp"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số lượng: 2" android:textColor="#666666" android:textSize="14sp" android:layout_marginBottom="8dp"/>
                    <!--  Price  -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="11.980.000đ" android:textColor="#FF6B35" android:textSize="18sp" android:textStyle="bold" android:layout_marginBottom="12dp"/>
                    <!--  Action Buttons - Hoàn thành  -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end">
                        <Button android:layout_width="wrap_content" android:layout_height="32dp" android:text="Hoàn thành" android:textColor="#FFFFFF" android:textSize="12sp" android:background="@drawable/button_completed_background" android:paddingHorizontal="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
