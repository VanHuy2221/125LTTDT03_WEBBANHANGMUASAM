<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Chi tiết trao đổi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"/>
    </LinearLayout>

    <!-- Card thông tin -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin trao đổi"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111827"
                android:layout_marginBottom="16dp"/>

            <!-- Mã trao đổi -->
            <TextView
                android:id="@+id/tvExchangeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã: EX123456"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="8dp"/>

            <!-- Trạng thái -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Đang chờ phản hồi"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="16dp"/>

            <!-- Sản phẩm muốn -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm muốn nhận:"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone 14 Pro Max"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="16dp"/>

            <!-- Sản phẩm đổi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm đổi:"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvExchangeItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MacBook Pro M2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="16dp"/>

            <!-- Nội dung -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung:"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi muốn trao đổi sản phẩm này vì..."
                android:textSize="14sp"
                android:textColor="#111827"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nút hành động (CHO NGƯỜI MUA) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnMessage"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="NHẮN TIN"
            android:textColor="#1976D2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_outline_primary"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="24dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="HỦY TRAO ĐỔI"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="#F44336"
            android:paddingHorizontal="24dp"/>

    </LinearLayout>

</LinearLayout>