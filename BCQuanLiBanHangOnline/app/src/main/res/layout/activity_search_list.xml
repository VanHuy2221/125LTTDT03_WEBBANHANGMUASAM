<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề Tìm kiếm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tim kiểm"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Thanh tìm kiếm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_bg_rounded"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginRight="8dp"
                app:tint="#666666" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Tìm kiếm sản phẩm..."
                android:background="@null"
                android:padding="4dp"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Danh mục sản phẩm -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layoutCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Các button danh mục sẽ được thêm dynamically -->

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Khoảng giá -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layoutPriceRanges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Các button khoảng giá sẽ được thêm dynamically -->

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Thương hiệu -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupBrands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            android:layout_marginBottom="16dp">

            <!-- Các chip thương hiệu sẽ được thêm dynamically -->

        </com.google.android.material.chip.ChipGroup>

        <!-- Bộ lọc giá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá thấp nhất"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginRight="8dp" />

            <EditText
                android:id="@+id/etMinPrice"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:hint="-"
                android:inputType="number"
                android:background="@drawable/edittext_border"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá cao nhất"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginRight="8dp" />

            <EditText
                android:id="@+id/etMaxPrice"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:hint="-"
                android:inputType="number"
                android:background="@drawable/edittext_border"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Tìm kiếm gần đây -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tim kiểm gần đây"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            android:layout_marginBottom="24px">

            <!-- Các chip tìm kiếm gần đây sẽ được thêm dynamically -->

        </com.google.android.material.chip.ChipGroup>

        <!-- Kết quả tìm kiếm -->
        <TextView
            android:id="@+id/tvResultCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tim thấy 4 sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Danh sách sản phẩm -->
        <LinearLayout
            android:id="@+id/layoutProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Các item sản phẩm sẽ được thêm dynamically -->

        </LinearLayout>

    </LinearLayout>

</ScrollView>