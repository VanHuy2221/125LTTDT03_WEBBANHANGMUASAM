<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F6F8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================= HEADER ================= -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_admin_header"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgAdminAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_administrator"
                    android:background="@drawable/bg_circle_white"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvAdminTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin Dashboard"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvAdminSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quản trị hệ thống bán hàng"
                        android:textSize="13sp"
                        android:textColor="#E3F2FD"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnLogout"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_logout"
                    android:padding="6dp"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- ================= STATS ================= -->
            <LinearLayout
                android:id="@+id/statsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <!-- ROW 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- USERS -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardUsers"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvUserCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#1E88E5" />

                            <TextView
                                android:id="@+id/tvUserLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Người dùng"
                                android:textSize="13sp"
                                android:textColor="#757575" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ORDERS -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardOrders"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvOrderCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#43A047" />

                            <TextView
                                android:id="@+id/tvOrderLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đơn hàng"
                                android:textSize="13sp"
                                android:textColor="#757575" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- ROW 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- REVENUE -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRevenue"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvRevenue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#E53935" />

                            <TextView
                                android:id="@+id/tvRevenueLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doanh thu"
                                android:textSize="13sp"
                                android:textColor="#757575" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- PENDING -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPending"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPendingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#FB8C00" />

                            <TextView
                                android:id="@+id/tvPendingLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang chờ"
                                android:textSize="13sp"
                                android:textColor="#757575" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- ================= MENU ================= -->
            <LinearLayout
                android:id="@+id/menuContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="8dp">

                <!-- DASHBOARD -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/iconDashboard"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_dashboard"
                            app:tint="#1E88E5" />

                        <TextView
                            android:id="@+id/textDashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dashboard"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- QUẢN LÝ NGƯỜI DÙNG -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardUserManagement"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/iconUsers"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person_2"
                            app:tint="#43A047" />

                        <TextView
                            android:id="@+id/textUserManagement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản lý người dùng"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- QUẢN LÝ ĐƠN HÀNG -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOrderManagement"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/iconOrders"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_order"
                            app:tint="#FB8C00" />

                        <TextView
                            android:id="@+id/textOrderManagement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Danh sách đơn hàng"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- QUẢN LÝ DANH MỤC -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCategoryManagement"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/iconCategories"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_category"
                            app:tint="#6A1B9A" />

                        <TextView
                            android:id="@+id/textCategoryManagement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản lý danh mục"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- QUẢN LÝ SẢN PHẨM -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProductManagement"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/iconProducts"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_product"
                            app:tint="#D32F2F" />

                        <TextView
                            android:id="@+id/textProductManagement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản lý sản phẩm"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- BÁO CÁO -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardReports"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/iconReports"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_report"
                            app:tint="#0288D1" />

                        <TextView
                            android:id="@+id/textReports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Báo cáo"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>