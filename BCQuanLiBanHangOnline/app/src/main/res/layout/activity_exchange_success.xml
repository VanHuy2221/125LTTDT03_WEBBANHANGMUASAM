<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA"
    android:padding="16dp">

    <!-- Header với nút back -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Đề nghị trao đổi thành công"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"/>

        <!-- Nút tin nhắn -->
        <ImageView
            android:id="@+id/btnMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_message"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Success Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Success Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_success"
                android:layout_marginBottom="20dp"/>

            <!-- Success Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đề nghị trao đổi đã được gửi!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#10B981"
                android:layout_marginBottom="12dp"/>

            <!-- Success Message -->
            <TextView
                android:id="@+id/tvSuccessMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúng tôi đã gửi đề nghị trao đổi của bạn đến người bán. Vui lòng chờ phản hồi."
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Order Details Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết đề nghị"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827"
                android:layout_marginBottom="16dp"/>

            <!-- Product Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sản phẩm muốn nhận:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="iPhone 14 Pro Max"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Your Product -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sản phẩm của bạn:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvYourProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MacBook Pro M2"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Estimated Value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giá trị ước tính:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvEstimatedValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25.000.000đ"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Exchange ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã đề nghị:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvExchangeId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EX123456"
                    android:textSize="14sp"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trạng thái:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đang chờ phản hồi"
                    android:textSize="14sp"
                    android:textColor="#F59E0B"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày gửi:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15/03/2024"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Button: Về trang chủ -->
        <Button
            android:id="@+id/btnGoHome"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="VỀ TRANG CHỦ"
            android:textColor="#1976D2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_outline_primary"
            android:layout_marginEnd="8dp"/>

        <!-- Button: Xem chi tiết -->
        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="THEO DÕI"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="#10B981"/>
    </LinearLayout>

    <!-- Note -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Bạn có thể nhắn tin với người bán để thương lượng"
        android:textSize="13sp"
        android:textColor="#6B7280"/>

</LinearLayout>