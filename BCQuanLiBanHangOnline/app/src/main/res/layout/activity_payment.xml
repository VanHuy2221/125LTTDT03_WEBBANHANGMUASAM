<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/back_button_bg"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:elevation="2dp"
            android:contentDescription="Back" />

        <!-- Order Summary -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng của bạn"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Product Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="iPhone 14 Pro Max 128GB"
                        android:textColor="#666"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25.990.000đ"
                        android:textColor="#333"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Shipping Fee -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phí vận chuyển"
                        android:textColor="#666"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30.000đ"
                        android:textColor="#333"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Discount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giảm giá"
                        android:textColor="#666"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-500.000đ"
                        android:textColor="#4caf50"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eee"
                    android:layout_marginTop="12dp" />

                <!-- Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng cộng"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFinalTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25.520.000đ"
                        android:textColor="#e53935"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Payment Methods -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phương thức mua"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Main Choice: Mua bằng tiền hoặc Trao đổi -->
                <RadioGroup
                    android:id="@+id/mainMethodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioBuyMoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mua bằng tiền"
                        android:textColor="#333"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radioExchange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trao đổi sản phẩm"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/paymentMethodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- QR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_qr_code_mini"
                            app:tint="#2196F3"/>

                        <RadioButton
                            android:id="@+id/radioQR"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Quét mã QR – Ví điện tử"
                            android:textSize="14sp"
                            android:paddingStart="12dp"/>
                    </LinearLayout>

                    <!-- Credit card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_credit_card_color"
                            app:tint="#9C27B0"/>

                        <RadioButton
                            android:id="@+id/radioCreditCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thẻ ngân hàng"
                            android:textSize="14sp"
                            android:paddingStart="12dp"/>
                    </LinearLayout>

                    <!-- COD -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cod"
                            app:tint="#4CAF50"/>

                        <RadioButton
                            android:id="@+id/radioCOD"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thanh toán khi nhận hàng"
                            android:textSize="14sp"
                            android:paddingStart="12dp"/>
                    </LinearLayout>

                </RadioGroup>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Payment Button -->
        <Button
            android:id="@+id/btnProcessPayment"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="XÁC NHẬN PHƯƠNG THỨC"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#1976D2"
            android:layout_marginTop="24dp"/>


    </LinearLayout>
</ScrollView>