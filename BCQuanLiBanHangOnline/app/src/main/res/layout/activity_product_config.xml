<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/back_button_bg"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <!-- Product info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/image_rounded_bg"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="iPhone 14 Pro Max 128GB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25.990.000đ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E53935"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quantity -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnDecrease"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:text="-"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:background="@drawable/ic_minus" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:gravity="center"
                        android:layout_marginHorizontal="16dp" />

                    <Button
                        android:id="@+id/btnIncrease"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:text="+"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/ic_plus" />


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Color -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu sắc"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <RadioGroup
                    android:id="@+id/colorGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <RadioButton
                        android:id="@+id/colorBlack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:button="@null"
                        android:background="@drawable/color_selector"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/colorWhite"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:button="@null"
                        android:background="@drawable/color_selector_white"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/colorGold"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:button="@null"
                        android:background="@drawable/color_selector_gold" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Storage -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dung lượng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/storageGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/storage128"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="128GB"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/storage256"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="256GB"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/storage512"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="512GB"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <!-- Total -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng tiền"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.990.000đ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#E53935" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Confirm -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmPurchase"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="28dp"
            android:text="XÁC NHẬN MUA HÀNG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            android:backgroundTint="#E53935"
            app:elevation="6dp" />


    </LinearLayout>
</ScrollView>
