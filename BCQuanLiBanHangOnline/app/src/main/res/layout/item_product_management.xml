<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="4dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Hình ảnh sản phẩm -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Thương hiệu -->
            <TextView
                android:id="@+id/txtProductBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thương hiệu"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Giá -->
            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1,000,000đ"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Số lượng -->
            <TextView
                android:id="@+id/txtProductQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Còn lại: 10"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Nút chỉnh sửa và xóa -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnEditProduct"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pen"
                app:tint="#2196F3" />

            <ImageView
                android:id="@+id/btnDeleteProduct"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trash"
                app:tint="@color/red_500"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Trạng thái và danh mục -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="108dp"
        android:paddingEnd="56dp"
        android:paddingBottom="12dp"
        android:paddingTop="4dp">

        <!-- Trong phần trạng thái của item_product_management.xml -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E8F5E9"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp">

            <!-- View tròn với ID để thay đổi màu -->
            <View
                android:id="@+id/statusDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#4CAF50"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/txtProductStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang bán"
                android:textSize="11sp"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Danh mục -->
        <TextView
            android:id="@+id/txtProductCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Danh mục"
            android:textSize="11sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>