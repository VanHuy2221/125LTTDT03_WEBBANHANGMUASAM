<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.muabansp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="App mua bán sản phẩm"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="HardcodedDebugMode">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Đăng nhập">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OrderManagementActivity"
            android:exported="false"
            android:label="Quản lý đơn hàng" />

        <activity
            android:name=".UserManagementActivity"
            android:exported="false"
            android:label="Quản lý người dùng" />
    </application>

</manifest>